<h1>Bookers</h1>
  <table>
    <thead>
      <tr>
       <th>Title:</th>
       <th>Body:</th>
       <th colspan="3"></th>
      </tr> 
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>  
        <!--emmet記法 -->
        <td><a>Show</a></td>
        <td><a>Edit</a></td>
        <td><a>Destroy</a></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  
  
    <h2>New book</h2>
  <%= form_with model: @book, url: '/books', methot: :post do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>