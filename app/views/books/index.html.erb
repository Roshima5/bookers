    <thead>
      <tr>
       <th>Title:</th>
       <th>Body:</th>
       <th colspan="3"></th>
      </tr> 
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>  
        <!--emmet記法 -->
        <td>
          <span>
            <%= link_to "Show", "/books/#{book.id}" %>
          </span>
        </td>
        <td>
          <span>
            <%= link_to "Edit", "/books/#{book.id}/edit" %>
          </span>
        </td>
        <td>
          <span>
            <%= link_to "Destroy", "books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?？" %>
          </span>
        </td>
      </tr>
    </tbody>
    <% end %>
