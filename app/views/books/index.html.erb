  <h2>New book</h2>
  <%= form_with model: @book, url: '/books', methot: :post do |f| %>

    <p>Title</p>
    <%= f.text_area :title %>

    <p>Body</p>
    <%= f.text_area :body %>
    
    <p>
      <%= f.submit 'Create Book' %>
    </p>
    
  <% end %>