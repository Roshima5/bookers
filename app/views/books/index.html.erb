<h1>Bookers</h1>
  <table>
    <thead>
      <tr>
       <th>Title:</th>
       <th>Body:</th>
       <th colspan="3"></th>
      </tr> 
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>  
        <!--emmet記法 -->
        <td>
          <span>
            <%= link_to "Show", "/books/#{book.id}" %>
          </span>
        </td>
        <td>
          <span>
            <%= link_to "Edit", "/books/#{book.id}" %>
          </span>
        </td>
        <td>
          <span>
            <%= link_to "Destroy", "/books/#{book.id}" %>
          </span>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  
  
  <h2>New book</h2>
  <form class="new_book" id="new_book" action="/books" accept-charset="UTF-8" method="post">
   <input name="utf8" type="hidden" value="✓">
