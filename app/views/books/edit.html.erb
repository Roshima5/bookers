<h1>Editing Book</h1>
<%= form_with model: @book, method: :patch do |f| %>
  <div class="field">Title</div>
    <%= f.text_field :title %>

  <div class="field">Body</div>
    <%= f.text_area :body %>

  <div class="field">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>
